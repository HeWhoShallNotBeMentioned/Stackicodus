<h1><%= @question.title %></h1>

<h3><%= @question.text %> </h3>

Asked by: <%= @question.user.username %> - Created: <%= time_ago_in_words @question.created_at %> ago

<hr>

<% if @current_user %>

<% @answers.each do |answer| %>
  <h4><%= answer.text %> - <%= answer.user.username %>
   Created: <%= time_ago_in_words answer.created_at %> ago
   Best Answer: <%= answer.best %></h4>
<% end %>




<hr>
<%= form_for [@question, @answer] do |f| %>
<h2>Submit your answer: </h2>
<div class="form-group">
  <%= f.label :text %>
  <%= f.text_field(:text, {:class => 'form-control', :required => 'true'}) %>
</div>

<button type="submit" class="btn btn-default">Answer</button>
<% end %>

<% end %>
